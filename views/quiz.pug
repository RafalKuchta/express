extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jak jest Twoja ulubiona pora roku?
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Zagłosuj')
      p Aby zobaczyć wyniki oddaj głos
  else
    h1 Dokonałeś już głosu w ankiecie
    p Wyniki
    each item in data
      li #{item.title} #{item.vote} głosów (#{Math.round(item.vote/sum*100)}%)

    p Głosów pddano: #{sum}